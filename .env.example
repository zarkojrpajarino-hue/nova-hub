# Nova Hub - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================
# FRONTEND (Vite) - Required
# ============================================================
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_ANON_KEY="your-anon-key-here"
VITE_SUPABASE_PROJECT_ID="your-project-id-here"

# Sentry error tracking (optional)
VITE_SENTRY_DSN="https://xxx@sentry.io/xxx"

# ============================================================
# SUPABASE EDGE FUNCTION SECRETS
# Set via: supabase secrets set KEY=value
# Or via: Supabase Dashboard > Settings > Edge Functions > Secrets
# ============================================================
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
ANTHROPIC_API_KEY="sk-ant-api03-..."
ALLOWED_ORIGINS="https://your-domain.vercel.app,http://localhost:5173,http://localhost:3000"
CRON_SECRET="generate-with-openssl-rand-hex-32"
ADMIN_SECRET="generate-with-openssl-rand-hex-32"

# Payments (only needed when ENABLE_PAYMENTS = true in src/config/features.ts)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
VITE_STRIPE_PUBLISHABLE_KEY="pk_live_..."

# External integrations (optional)
GOOGLE_ANALYTICS_API_KEY="your-ga-key"
SLACK_WEBHOOK_URL="https://hooks.slack.com/..."
VERCEL_TOKEN="your-vercel-token"
VERCEL_TEAM_ID="your-vercel-team-id"
